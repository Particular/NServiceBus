<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\NServiceBus.Core\NServiceBus.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.2.0" PrivateAssets="All" />
    <PackageReference Include="NUnit" Version="[3.12.0, 4.0.0)" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.15.1" PrivateAssets="All" />
    <PackageReference Include="Particular.Packaging" Version="0.5.0" PrivateAssets="All" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.ContainerTests.Sources</PackageId>
    <Description>Container tests for nservicebus core functionality</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="**\*.cs" Pack="true" PackagePath="content\App_Packages\NSB.ContainerTests\;contentFiles\cs\any\NSB.ContainerTests\" />
  </ItemGroup>

  <!-- Workaround for https://github.com/nunit/nunit3-vs-adapter/issues/697 -->
  <Target Name="RemoveNUnit3TestAdapterFromPackage" BeforeTargets="_GetPackageFiles">
    <ItemGroup>
      <Content Remove="@(Content)" Condition="'%(Extension)' == '.dll'"/>
      <Content Remove="@(Content)" Condition="'%(Extension)' == '.pdb'"/>
    </ItemGroup>
  </Target>
  <!-- End Workaround -->

</Project>
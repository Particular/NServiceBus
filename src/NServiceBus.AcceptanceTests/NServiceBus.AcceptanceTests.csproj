<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <NoWarn>$(NoWarn);PCR0001;NU5123</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\NServiceBus.AcceptanceTesting\NServiceBus.AcceptanceTesting.csproj" />
    <ProjectReference Include="..\NServiceBus.Core\NServiceBus.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Configuration" />
    <Reference Include="System.Messaging" />
    <Reference Include="System.Transactions" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.2.0" PrivateAssets="All" />
    <PackageReference Include="NUnit" Version="[3.12.0, 4.0.0)" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.15.1" PrivateAssets="All" />
    <PackageReference Include="Particular.CodeRules" Version="0.2.1" PrivateAssets="All" />
    <PackageReference Include="Particular.Packaging" Version="1.2.1" PrivateAssets="All" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.AcceptanceTests.Sources</PackageId>
    <Description>Acceptance tests for NServiceBus core functionality</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="**\*.cs" Pack="true" PackagePath="content\App_Packages\NSB.AcceptanceTests\;contentFiles\cs\any\NSB.AcceptanceTests\" />
    <Compile Update="\**\src\NServiceBus.AcceptanceTests\Core\**\*.cs" Pack="false" />
  </ItemGroup>

  <!-- Workaround for https://github.com/nunit/nunit3-vs-adapter/issues/697 -->
  <Target Name="RemoveNUnit3TestAdapterFromPackage" BeforeTargets="_GetPackageFiles">
    <ItemGroup>
      <Content Remove="@(Content)" Condition="'%(Extension)' == '.dll'" />
      <Content Remove="@(Content)" Condition="'%(Extension)' == '.pdb'" />
    </ItemGroup>
  </Target>
  <!-- End Workaround -->

</Project>